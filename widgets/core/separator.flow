//
// A thin horizontal line for visual grouping between widgets.
// Rendered as a 2px tall box in the border color.

use "../../engine/tree"
use "../../themes/dark"

// Create a horizontal separator
// parent: parent widget ID
// w: width in pixels (use parent width or a fixed value)
// Returns: widget ID
fn ui_separator(parent, w)
  let id = ui_tree_add(UI_BOX, parent, w, 2.0, " ")
  let cr = ui_theme_r(UI_COLOR_BORDER)
  let cg = ui_theme_g(UI_COLOR_BORDER)
  let cb = ui_theme_b(UI_COLOR_BORDER)
  let _s = ui_tree_set_color(id, cr, cg, cb)
  return id
end
