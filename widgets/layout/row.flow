//
// Arranges children horizontally with configurable spacing.

use "../../engine/tree"

// Create a row container
// parent: parent widget ID (-1 for root)
// spacing: gap between children in pixels
// Returns: widget ID
fn ui_row(parent, spacing)
  let id = ui_tree_add(UI_ROW, parent, 0.0, 0.0, " ")
  let _s = ui_tree_set_spacing(id, spacing)
  return id
end
