// dark.flow â€” OctoUI Dark Theme
//
// Provides a dark color palette for the OctoUI rendering engine.
// Colors are stored as RGB triples (0-255 range) in parallel arrays,
// indexed by semantic color constants.
//
// Usage:
//   let r = ui_theme_r(UI_COLOR_PRIMARY)
//   let g = ui_theme_g(UI_COLOR_PRIMARY)
//   let b = ui_theme_b(UI_COLOR_PRIMARY)

// -- Color Index Constants --------------------------------------------------
let UI_COLOR_BG = 0.0
let UI_COLOR_SURFACE = 1.0
let UI_COLOR_PRIMARY = 2.0
let UI_COLOR_TEXT = 3.0
let UI_COLOR_TEXT_DIM = 4.0
let UI_COLOR_BORDER = 5.0
let UI_COLOR_HOVER = 6.0
let UI_COLOR_ACTIVE = 7.0

// -- Theme Color Arrays (8 entries each) ------------------------------------
// Indices match the constants above.
//   0=BG        1=SURFACE    2=PRIMARY    3=TEXT
//   4=TEXT_DIM   5=BORDER     6=HOVER      7=ACTIVE
let mut _ui_theme_r = [30.0, 45.0, 90.0, 220.0, 140.0, 80.0, 75.0, 90.0]
let mut _ui_theme_g = [30.0, 45.0, 130.0, 222.0, 142.0, 82.0, 78.0, 130.0]
let mut _ui_theme_b = [35.0, 50.0, 240.0, 228.0, 148.0, 88.0, 85.0, 240.0]

// -- Getter Functions -------------------------------------------------------

fn ui_theme_r(idx)
  return _ui_theme_r[int(idx)]
end

fn ui_theme_g(idx)
  return _ui_theme_g[int(idx)]
end

fn ui_theme_b(idx)
  return _ui_theme_b[int(idx)]
end

// -- Convenience: get all three channels at once ----------------------------
// Returns r via the function return; caller reads g and b from the arrays
// _ui_theme_g and _ui_theme_b at the same index.
// (OctoFlow cannot return multiple values from a function.)

fn ui_theme_set(idx, r, g, b)
  let i = int(idx)
  _ui_theme_r[i] = r
  _ui_theme_g[i] = g
  _ui_theme_b[i] = b
  return 0.0
end
